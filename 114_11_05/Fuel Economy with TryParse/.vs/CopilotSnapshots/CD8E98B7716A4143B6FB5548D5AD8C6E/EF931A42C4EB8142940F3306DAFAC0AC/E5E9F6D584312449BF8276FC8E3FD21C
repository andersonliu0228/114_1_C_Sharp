using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Fuel_Economy_with_TryParse
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        // 計算按鈕事件：將使用者輸入的公里數與公升數轉為數值，計算每公升可行駛的公里數 (km/L)
        private void calculateButton_Click(object sender, EventArgs e)
        {
            // 宣告變數以儲存解析後的數值
            double kilometers; // 使用者輸入的公里數
            double liters;     // 使用者輸入的公升數

            // 使用 TryParse 以免拋出例外，若解析失敗則提示使用者並中止計算
            if (!double.TryParse(milesTextBox.Text, out kilometers))
            {
                MessageBox.Show("請輸入有效的公里數（數字）", "輸入錯誤", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                milesTextBox.Focus();
                return;
            }

            if (!double.TryParse(gallonsTextBox.Text, out liters))
            {
                MessageBox.Show("請輸入有效的公升數（數字）", "輸入錯誤", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                gallonsTextBox.Focus();
                return;
            }

            // 檢查公升數是否大於 0，避免除以 0
            if (liters <= 0)
            {
                MessageBox.Show("公升數必須大於 0", "輸入錯誤", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                gallonsTextBox.Focus();
                return;
            }

            // 計算每公升公里數
            double kmPerLiter = kilometers / liters;

            // 將結果顯示在介面上，格式為小數點後兩位
            mpgLabel.Text = kmPerLiter.ToString("F2") + " km/L";
        }

        private void exitButton_Click(object sender, EventArgs e)
        {
            // 關閉表單（結束程式）
            this.Close();
        }
    }
}
